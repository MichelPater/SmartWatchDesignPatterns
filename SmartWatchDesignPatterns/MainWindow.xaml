<Window x:Class="SmartWatchDesignPatterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid>
        <TabControl HorizontalAlignment="Left"
                    Height="299"
                    Margin="10,10,0,0"
                    VerticalAlignment="Top"
                    Width="497">
            <TabItem Header="Clock">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="timeLabel"
                           Content="Label"
                           HorizontalAlignment="Left"
                           Margin="132,61,0,0"
                           VerticalAlignment="Top"
                           Height="48"
                           Width="227" />

                    <TextBlock Name="MyWipedText"
                               Margin="10,196,10,10"
                               FontSize="48"
                               FontWeight="Bold"
                               Foreground="Maroon">
Temporary Text

  <!-- Animates the text block's width. -->
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="TextBlock.Loaded">
                                <BeginStoryboard>
                                    <Storyboard Name="FadeOutStoryboard">
                                        <DoubleAnimation Storyboard.TargetProperty="Width"
                                                         From="0"
                                                         To="480"
                                                         Duration="0:0:1"
                                                         FillBehavior="HoldEnd" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                    <Button Content="Next"
                            Name="NextButton"
                            HorizontalAlignment="Left"
                            Margin="406,171,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="NextButton_Click" />
                    <Button Content="Previous"
                            Name="PreviousButton"
                            HorizontalAlignment="Left"
                            Margin="10,171,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="PreviousButton_Click" />

                </Grid>
            </TabItem>
            <TabItem Header="Timer">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="MinuteLabel"
                           Content="MinuteLabel"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="23,50,0,0"
                           Width="90"
                           Grid.Column="2" />
                    <Label x:Name="SecondLabel"
                           Content="SecondLabel"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="23,81,0,0"
                           Width="78"
                           Grid.Column="2" />
                    <Button Content="Set Timer"
                            HorizontalAlignment="Left"
                            Margin="149,234,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="Set_Timer" />
                    <Button Content="Start Timer"
                            HorizontalAlignment="Left"
                            Margin="260,147,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="Start_Timer" />
                    <Button Content="Pauze Timer"
                            HorizontalAlignment="Left"
                            Margin="379,147,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="Pauze_Timer" />
                    <Button Content="Stop/Reset Timer"
                            HorizontalAlignment="Left"
                            Margin="379,199,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="Undo_Timer" />
                    <TextBox x:Name="minutebox"
                             HorizontalAlignment="Left"
                             Height="23"
                             Margin="10,198,0,0"
                             TextWrapping="Wrap"
                             Text="Minuut"
                             VerticalAlignment="Top"
                             Width="120" />
                    <TextBox x:Name="secondbox"
                             HorizontalAlignment="Left"
                             Height="23"
                             Margin="10,234,0,0"
                             TextWrapping="Wrap"
                             Text="Seconde"
                             VerticalAlignment="Top"
                             Width="120" />
                </Grid>
            </TabItem>
            <TabItem Header="StopWatch">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
    
    
 