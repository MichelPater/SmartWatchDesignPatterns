<Window x:Class="SmartWatchDesignPatterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="350"
        Width="525">

    <Grid>
        <TabControl HorizontalAlignment="Left"
                    Height="299"
                    Margin="10,10,0,0"
                    VerticalAlignment="Top"
                    Width="497">
            <TabItem Header="Clock">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="timeLabel"
                           Content="Label"
                           HorizontalAlignment="Left"
                           Margin="132,61,0,0"
                           VerticalAlignment="Top"
                           Height="48"
                           Width="227" />

                    <TextBlock Name="MyWipedText"
                               Margin="11,196,9,10"
                               FontSize="25"
                               FontWeight="Bold"
                               Foreground="Maroon"
                               TextWrapping="Wrap"
                               Text="Temporary Text"
                               TextTrimming="CharacterEllipsis">
                        
                        
                        


  <!-- Animates the text block's width. -->
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Button.Click">
                                <BeginStoryboard>
                                    <Storyboard Name="FadeOutStoryboard">

                                        <DoubleAnimation x:Name="FadeInAnimation"
                                                         Storyboard.TargetProperty="Width"
                                                         From="0"
                                                         To="480"
                                                         Duration="0:0:1"
                                                         FillBehavior="HoldEnd" />
                                        <DoubleAnimation x:Name="FadeOutAnimation"
                                                         Storyboard.TargetProperty="Width"
                                                         From="480"
                                                         To="0"
                                                         Duration="0:0:1"
                                                         FillBehavior="HoldEnd" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>




                    </TextBlock>
                    <Button Content="Next"
                            Name="NextButton"
                            HorizontalAlignment="Left"
                            Margin="406,171,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="NextButton_Click" />
                    <Button Content="Previous"
                            Name="PreviousButton"
                            HorizontalAlignment="Left"
                            Margin="10,171,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="PreviousButton_Click" />

                </Grid>
            </TabItem>
            <TabItem Header="Timer">
                <Grid x:Name="MainGrid" 
                      Background="#FFE5E5E5">
                    <Label x:Name="MinuteLabel"
                           Content="MinuteLabel"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="24,37,0,0"
                           Width="200" Height="75" FontSize="40" />
                    <Label x:Name="SecondLabel"
                           Content="SecondLabel"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Margin="260,37,0,0"
                           Width="200" Height="75" FontSize="40" />
                    <Button Content="Set Timer"
                            HorizontalAlignment="Left"
                            Margin="149,234,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="Set_Timer" />
                    <Button Content="Start Timer"
                            HorizontalAlignment="Left"
                            Margin="149,198,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="Start_Timer" />
                    <Button Content="Pauze Timer"
                            HorizontalAlignment="Left"
                            Margin="260,199,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="Pauze_Timer" />
                    <Button Content="Stop/Reset Timer"
                            HorizontalAlignment="Left"
                            Margin="379,199,0,0"
                            VerticalAlignment="Top"
                            Width="75"
                            Click="Undo_Timer" />
                    <TextBox x:Name="minutebox"
                             x:FieldModifier="public"
                             HorizontalAlignment="Left"
                             Height="23"
                             Margin="10,198,0,0"
                             TextWrapping="Wrap"
                             Text="Minuut"
                             VerticalAlignment="Top"
                             Width="120" />
                    <TextBox x:Name="secondbox"
                             x:FieldModifier="public"
                             HorizontalAlignment="Left"
                             Height="23"
                             Margin="10,234,0,0"
                             TextWrapping="Wrap"
                             Text="Seconde"
                             VerticalAlignment="Top"
                             Width="120" />
                    <Label x:Name="StateNameLabel" 
                           Content="StateName" 
                           HorizontalAlignment="Left" 
                           Height="36" 
                           Margin="24,131,0,0" 
                           VerticalAlignment="Top" 
                           Width="178"/>
                </Grid>
            </TabItem>
            <TabItem Header="StopWatch">
                <Grid Background="#FFE5E5E5" >
                    <Label x:Name="swLabel" Content="StopWatchTime" HorizontalAlignment="Left" Margin="35,110,0,0" VerticalAlignment="Top" Width="117"/>
                    <Label x:Name="mementoLabel" Content="MementoLabel" HorizontalAlignment="Left" Margin="266,110,0,0" VerticalAlignment="Top" Width="104"/>
                    <Button Content="Start Stopwatch" HorizontalAlignment="Left" Margin="199,222,0,0" VerticalAlignment="Top" Width="106" Click="Button_Click"/>
                </Grid>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </TabControl>

    </Grid>
</Window>
    
    
 