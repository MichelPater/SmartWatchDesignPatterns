<Window x:Class="SmartWatchDesignPatterns.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
            <TabItem Header="Clock">
                <Grid Background="#FFE5E5E5">
                    <Label x:Name="timeLabel" Content="Label" HorizontalAlignment="Left" Margin="132,61,0,0" VerticalAlignment="Top" Height="48" Width="227"/>
                </Grid>
            </TabItem>
            <TabItem Header="Timer">
                <Grid Background="#FFE5E5E5">
                    <Button Content="DisplayState" HorizontalAlignment="Left" Height="25" Margin="9,144,0,0" VerticalAlignment="Top" Width="92" Click="Timer_Button_Click"/>
                    <Label x:Name="StateNameLabel" Content="StateName" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="23,50,0,0" Width="90" Grid.Column="2"/>
                    <Label x:Name="StateColorLabel" Content="Color" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="23,81,0,0" Width="78" Grid.Column="2"/>
                    <Button Content="Set Timer" HorizontalAlignment="Left" Margin="133,147,0,0" VerticalAlignment="Top" Width="75" Click="Set_Timer"/>
                    <Button Content="Start Timer" HorizontalAlignment="Left" Margin="260,147,0,0" VerticalAlignment="Top" Width="75" Click="Start_Timer"/>
                    <Button Content="Pauze Timer" HorizontalAlignment="Left" Margin="379,147,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
                    <Button Content="Stop/Reset Timer" HorizontalAlignment="Left" Margin="182,215,0,0" VerticalAlignment="Top" Width="75" Click="Undo_Timer"/>
                </Grid>
            </TabItem>
            <TabItem Header="StopWatch">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Settings">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
